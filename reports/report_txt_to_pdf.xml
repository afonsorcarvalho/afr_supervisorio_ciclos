<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template do Relatório -->
    <template id="report_txt_to_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Cabeçalho com informações do ciclo -->
                        <div class="row mb-4">
                            <div class="col-6">
                                <strong>Ciclo:</strong> <span t-field="doc.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Data:</strong> <span t-field="doc.start_date"/>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col-6">
                                <strong>Equipamento:</strong> <span t-field="doc.equipment_id.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Tipo de Ciclo:</strong> <span t-field="doc.cycle_type_id.name"/>
                            </div>
                        </div>

                        <!-- Conteúdo do arquivo TXT -->
                        <div class="row">
                            <div class="col-12">
                                <pre style="font-family: monospace; white-space: pre-wrap; font-size: 10px;">
                                    <t t-if="doc.file_path">
                                        <t t-esc="doc._compute_cycle_txt"/>
                                        <t t-esc="doc.cycle_txt"/>
                                        
                                    </t>
                                </pre>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- Ação do Relatório -->
    <record id="action_report_txt_to_pdf" model="ir.actions.report">
        <field name="name">Exportar TXT como PDF</field>
        <field name="model">afr.supervisorio.ciclos</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">afr_supervisorio_ciclos.report_txt_to_pdf</field>
        <field name="report_file">afr_supervisorio_ciclos.report_txt_to_pdf</field>
        <field name="print_report_name">'Ciclo - %s' % object.name</field>
        <field name="binding_model_id" ref="model_afr_supervisorio_ciclos"/>
        <field name="binding_type">report</field>
    </record>
</odoo> 
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_afr_supervisorio_ciclos_form" model="ir.ui.view">
        <field name="name">afr.supervisorio.ciclos.form</field>
        <field name="model">afr.supervisorio.ciclos</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_start" 
                            string="Iniciar" 
                            type="object" 
                            class="oe_stat_button" 
                            icon="fa-play"
                            attrs="{'invisible': [('state', '!=', 'aguardando')]}"/>
                    <button name="action_conclude" 
                            string="Concluir" 
                            type="object" 
                            class="oe_stat_button" 
                            icon="fa-check"
                            attrs="{'invisible': [('state', '!=', 'em_andamento')]}"/>
                    <button name="action_cancel" 
                            string="Cancelar" 
                            type="object" 
                            class="oe_stat_button" 
                            icon="fa-times"
                            attrs="{'invisible': [('state', 'in', ['concluido', 'cancelado'])]}"/>
                    <button name="action_pause" 
                            string="Pausar" 
                            type="object" 
                            class="oe_stat_button" 
                            icon="fa-pause"
                            attrs="{'invisible': [('state', '!=', 'em_andamento')]}"/>
                    <button name="action_resume" 
                            string="Retomar" 
                            type="object" 
                            class="oe_stat_button" 
                            icon="fa-play"
                            attrs="{'invisible': [('state', '!=', 'pausado')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="em_andamento,concluido"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="equipment_id" />
                            <field name="equipment_nickname" readonly="1"/>
                            <field name="equipment_category_id" readonly="1"/>
                            <field name="cycle_type_id"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="duration"/>
                            <field name="duration_planned"/>
                            <field name="operator_id"/>
                            <field name="batch_number"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Arquivos" name="files">
                            <group>
                                <field name="file_path" readonly="1"/>
                                <field name="cycle_txt" filename="cycle_txt_filename" widget="binary"/>
                                <field name="cycle_txt_filename" invisible="1"/>
                                <field name="cycle_pdf" filename="cycle_pdf_filename" widget="binary"/>
                                <field name="cycle_pdf_filename" invisible="1"/>
                            </group>
                        </page>
                        <page string="Observações" name="notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_afr_supervisorio_ciclos_tree" model="ir.ui.view">
        <field name="name">afr.supervisorio.ciclos.tree</field>
        <field name="model">afr.supervisorio.ciclos</field>
        <field name="arch" type="xml">
            <tree string="Ciclos" decoration-info="state=='aguardando'"
                  decoration-success="state=='concluido'"
                  decoration-warning="state=='em_andamento'"
                  decoration-danger="state in ['erro','cancelado','abortado']"
                  decoration-bf="is_overdue"
                  js_class="supervisorio_ciclos_tree">
                <field name="state" widget="badge"
                 decoration-info="state=='aguardando'"
                  decoration-success="state=='concluido'"
                  decoration-warning="state=='em_andamento'"
                  decoration-danger="state in ['erro','cancelado','abortado']"
                  decoration-bf="is_overdue"
                />
                <field name="name"/>
                <field name="batch_number"/>
                <field name="equipment_id"/>
                <field name="equipment_nickname"/>
                <field name="equipment_category_id"/>
                <field name="cycle_type_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="duration" widget="float_time"/>
                <field name="operator_id"/>
                <field name="company_id" optional="hide"/>
                <field name="is_overdue" invisible="1"/>
            </tree>
           
        </field>
    </record>

    <!-- Search View -->
    <record id="view_afr_supervisorio_ciclos_search" model="ir.ui.view">
        <field name="name">afr.supervisorio.ciclos.search</field>
        <field name="model">afr.supervisorio.ciclos</field>
        <field name="arch" type="xml">
            <search string="Pesquisar Ciclos">
                <field name="name"/>
                <field name="equipment_id"/>
                <field name="equipment_nickname"/>
                <field name="cycle_type_id"/>
                <field name="operator_id"/>
                <field name="batch_number"/>
                <separator/>
                <filter string="Meus Ciclos" name="my_cycles" domain="[('operator_id', '=', uid)]"/>
                <filter string="Atrasados" name="overdue" domain="[('is_overdue', '=', True)]"/>
                <separator/>
                <filter string="Em Andamento" name="ongoing" domain="[('state','=','em_andamento')]"/>
                <filter string="Aguardando" name="waiting" domain="[('state','=','aguardando')]"/>
                <filter string="Concluídos" name="completed" domain="[('state','=','concluido')]"/>
                <filter string="Cancelados" name="canceled" domain="[('state','=','cancelado')]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Equipamento" name="equipment" context="{'group_by':'equipment_id'}"/>
                    <filter string="Categoria de Equipamento" name="equipment_category" context="{'group_by':'equipment_category_id'}"/>
                    <filter string="Tipo de Ciclo" name="cycle_type" context="{'group_by':'cycle_type_id'}"/>
                    <filter string="Status" name="state" context="{'group_by':'state'}"/>
                    <filter string="Operador" name="operator" context="{'group_by':'operator_id'}"/>
                    <filter string="Data Início" name="start_date" context="{'group_by':'start_date:day'}"/>
                </group>
            </search>
             <searchpanel>
              
               
                <field name="equipment_category_id" string="Categoria" enable_counters="1"/>
           
              
               
            </searchpanel>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="view_afr_supervisorio_ciclos_calendar" model="ir.ui.view">
        <field name="name">afr.supervisorio.ciclos.calendar</field>
        <field name="model">afr.supervisorio.ciclos</field>
        <field name="arch" type="xml">
            <calendar string="Ciclos" date_start="start_date" date_stop="end_date" 
                     color="state" mode="month" quick_add="False">
                <field name="name"/>
                <field name="equipment_id"/>
                <field name="cycle_type_id"/>
                <field name="operator_id"/>
            </calendar>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_afr_supervisorio_ciclos_pivot" model="ir.ui.view">
        <field name="name">afr.supervisorio.ciclos.pivot</field>
        <field name="model">afr.supervisorio.ciclos</field>
        <field name="arch" type="xml">
            <pivot string="Análise de Ciclos">
                <field name="equipment_id" type="row"/>
                <field name="cycle_type_id" type="row"/>
                <field name="state" type="col"/>
                <field name="duration" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Action -->
    <record id="action_afr_supervisorio_ciclos_ciclos" model="ir.actions.act_window">
        <field name="name">Ciclos</field>
        <field name="res_model">afr.supervisorio.ciclos</field>
        <field name="view_mode">tree,form,calendar,pivot</field>
        <field name="search_view_id" ref="view_afr_supervisorio_ciclos_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                Não há ciclos cadastrados.
            </p>
            <p>
                Os ciclos serão registrados automaticamente pelo sistema.
            </p>
        </field>
    </record>


    <!-- Form View Lavadora Ultrassônica -->
    <record id="view_afr_supervisorio_ciclos_form_ultrassonica" model="ir.ui.view">
        <field name="name">afr.supervisorio.ciclos.form.ultrassonica</field>
        <field name="model">afr.supervisorio.ciclos</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_start" string="Iniciar" type="object" states="aguardando" class="oe_highlight"/>
                    <button name="action_pause" string="Pausar" type="object" states="em_andamento"/>
                    <button name="action_conclude" string="Concluir" type="object" states="em_andamento,pausado" class="oe_highlight"/>
                    <button name="action_cancel" string="Cancelar" type="object" states="aguardando,em_andamento,pausado"/>
                    <field name="state" widget="statusbar" statusbar_visible="aguardando,em_andamento,concluido"/>
                </header>
                <sheet>
                    <div class="oe_title">

                        <h1>
                            <field name="name" placeholder="Nome do Ciclo"/>
                        </h1>
                        <h2>
                            Ciclo Ultrassônica
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="equipment_id"/>
                            <field name="cycle_type_id"/>
                            <field name="operator_id"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="duration" widget="float_time"/>
                     
                            <field name="batch_number"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Parâmetros do Processo">
                           
                        </page>
                        <page string="Observações">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

 
</odoo> 